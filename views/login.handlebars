<h1>Login Page</h1>

{{!-- based on https://startbootstrap.com/snippets/login/ --}}
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Log In</h5>
            <form class="form-signin" action ="/login" method="post">
              <div class="form-label-group">
                <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                <label for="inputEmail">Email address</label>
              </div>

              <div class="form-label-group">
                <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
                <label for="inputPassword">Password</label>
              </div>

              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
              </div>
              <input type="submit" name="BMM" value="Bedroom-mobile Manager" class="btn btn-lg btn-primary btn-block text-uppercase">
              <input type="submit" name="DTM" value="Docking Terminal Manager"class="btn btn-lg btn-primary btn-block text-uppercase">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>